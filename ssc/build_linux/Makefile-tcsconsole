VPATH = ../tcsconsole

WEXDIR = ../../wex
WEXLIB = $(WEXDIR)/wexuxwx3.a
LKDIR = ../../lk
LKLIB = $(LKDIR)/lkuxwx3.a

CC = gcc
CXX = g++
CFLAGS = -g -O2  -I. -I$(WEXDIR)/include -I$(LKDIR)/include -I../tcs -DLK_USE_WXWIDGETS `wx-config --cflags`
LDFLAGS = -std=c++0x $(WEXLIB) $(LKLIB) tcs.a nlopt.a solarpilot.a shared.a `wx-config --libs stc` `wx-config --libs aui` `wx-config --libs` -lm  -lfontconfig -ldl -lcurl

CXXFLAGS=-std=c++0x $(CFLAGS)



OBJECTS  = tcsscript.o \
	tcsmain.o \
	tcslayout.o
	
TARGET = TCSConsole

$(TARGET): $(OBJECTS) $(WEXLIB) 
	$(CXX) -g -o $@ $^ $(LDFLAGS)
	
clean:
	rm -f $(TARGET) $(OBJECTS)
