SRCDIR = ../src:../shadecalc
VPATH = $(SRCDIR)

WEXDIR = ../../wex
LKDIR = ../../lk

WEXLIB = $(WEXDIR)/wexuxwx3.a
LKLIB = $(LKDIR)/lkuxwx3.a

CC = gcc
CXX = g++
CFLAGS = -g -DLK_USE_WXWIDGETS -DS3D_STANDALONE -I. -I$(SRCDIR) -I$(WEXDIR)/include -I$(LKDIR)/include `wx-config-3 --cflags`
#CXXFLAGS = $(CFLAGS)
LFLAGS = `wx-config-3 --libs propgrid` `wx-config-3 --libs aui` `wx-config-3 --libs stc` `wx-config-3 --libs richtext` `wx-config-3 --libs` -lm $(LKLIB) $(WEXLIB) -lstdc++ -lcurl

CXXFLAGS=-stdlib=libc++ -std=c++11 $(CFLAGS)
OBJCXXFLAGS=-stdlib=libc++ -std=c++11
LDFLAGS=-stdlib=libc++ $(LFLAGS)


OBJECTS =  \
	shade.o \
	s3clipper.o \
	s3engine.o \
	s3objects.o \
	s3tool.o \
	s3view.o \
	simplecurl.o \
	widgets.o \
	object.o

TARGET = shade3d.bin


$(TARGET): $(OBJECTS) $(WEXLIB) $(LKLIB)
	$(CXX) -g -o $@ $^ $(LDFLAGS)
	mkdir -p ../deploy/linux_64
	cp $(TARGET) ../deploy/linux_64
	
DEPENDS = $(OBJECTS:.o=.d)

-include $(DEPENDS)

%.d: %.cpp
	$(CXX) -MM $(CFLAGS) $^ > $*.d
	@cp -f $*.d $*.d.tmp
	@sed -e 's/.*://' -e 's/\\$$//' < $*.d.tmp | fmt -1 | \
	  sed -e 's/^ *//' -e 's/$$/:/' >> $*.d
	@rm -f $*.d.tmp

clean:
	rm -rf $(OBJECTS) $(TARGET)
