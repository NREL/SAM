style "clearlooks-scale" = "clearlooks-button"
{
        engine "murrine"
                {
		contrast            = 1.0 
                lightborder_shade   = 1.0
                highlight_shade	    = 1.0
                gradient_shades	    = { 1.0, 1.0, 1.0, 1.0 }
		roundness           = 2
                }
}

style "clearlooks-hscale" = "clearlooks-scale"
{
        engine "murrine"
                {
		contrast            = 1.0 
                lightborder_shade   = 1.0
                highlight_shade	    = 1.0
                gradient_shades	    = { 1.0, 1.0, 1.0, 1.0 }
		roundness           = 2
                }
}

style "clearlooks-vscale" = "clearlooks-scale"
{
        engine "murrine"
                {
		contrast            = 1.0 
                lightborder_shade   = 1.0
                highlight_shade	    = 1.0
                gradient_shades	    = { 1.0, 1.0, 1.0, 1.0 }
		roundness           = 2
                }
}

