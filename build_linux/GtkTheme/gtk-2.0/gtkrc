##############
# SCROLLBARS
##############
style "clearlooks-scrollbar"
{
	xthickness = 0
	ythickness = 0
  	GtkScrollbar::has-backward-stepper		= 1
  	GtkScrollbar::has-secondary-backward-stepper	= 0
   	GtkRange::slider_width 			= 14
   	GtkRange::stepper_size 			= 14
   	GtkScale::slider-length			= 20
  	GtkScale::value-spacing			= 0
    	GtkRange::trough-border			= 1
  	GtkRange::trough-under-steppers 		= 1
   	
	bg[NORMAL]	= shade (1.00, @bg_color) # Color for non-colored scrollbars.
	bg[INSENSITIVE] = @bg_color # Color for non-colored scrollbars.
	bg[PRELIGHT]	= @bg_color # Color for scrollbar prelight? (probably obsolete)
	bg[ACTIVE]	= @bg_color # Color for scrollbar rail's background.
	bg[SELECTED]	= @selected_bg_color # Color of scrollbars.
	fg[PRELIGHT]	= shade (0.66, @selected_bg_color) # Highlighted scrollbar button.
	fg[ACTIVE]	= shade (0.33, @selected_bg_color) # Pressed scrollbar button.
  	# Arrows
  	text[NORMAL] = shade (0.33, @bg_color)

  	engine "aurora"
  	{    		
  	menubarstyle   = 0 # 0 = flat, 1 = gradient, 2 = sunken
   	curvature      = 2.0
    	arrowsize      = 1.0 # controls combo_arrow circle size.  Diameter set by (11 + 2 * arrowsize)
    	old_arrowstyle = FALSE # set to TRUE for original circled arrows
    	animation      = FALSE # FALSE = disabled, TRUE = enabled
    	contrast       = 1.0
  	}
}

style "clearlooks-hscrollbar" = "clearlooks-scrollbar"
{
engine "aurora"
	{
	}
}

style "clearlooks-vscrollbar" = "clearlooks-scrollbar"
{
engine "aurora"
	{	
	}
}

