style "clearlooks-progressbar"
{
	xthickness = 1
	ythickness = 1
	fg[PRELIGHT]	= @base_color  # Progressbar prelighted text.

        # This next section is for using Murrine progressbars.
          engine "murrine" 
          {
                gradient_shades	= {1.09,1.01,1.01,1.00} # Rendering of gradients.
                highlight_shade	= 1.10  # Set highlight amount for buttons or widgets.
                rgba		= FALSE # FALSE = disabled, TRUE = enabled.
                gradients	= TRUE # Enables gradients.
                animation	= FALSE # FALSE disables progressbar animations.
                contrast	= 1.00
                glazestyle	= 0
                lightborder_shade	= 1.10   # Sets lightborder amount for buttons or widgets.
                lightborderstyle	= 1     # 0 = Lightborder on top side, 1 = Lightborder on all sides.
                progressbarstyle    = 0     # 0 = nothing, 1 = diagonal stripes, 2 = blocks
        }

}

