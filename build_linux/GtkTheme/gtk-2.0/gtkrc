	fg[PRELIGHT]	= @selected_fg_color  # Color of selected menu item text.
	bg[SELECTED]	= shade (1.25, @selected_bg_color)  # Color of menu items.
	bg[PRELIGHT]	= shade (1.25, @selected_bg_color)  # Color of menu items.
}

