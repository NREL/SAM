		{
			function = SLIDER
			recolorable = TRUE
			file = "scrollbar/scrollbar_horizontal.png"
			border = {3, 3, 3, 3}
			stretch = TRUE
			orientation = HORIZONTAL
			state = SELECTED
		}
	
        image 
		{
            function = SLIDER
            recolorable = TRUE
