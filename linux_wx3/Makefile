SRCDIR = ../src
VPATH = $(SRCDIR)

WEXDIR = ../../wex
LKDIR = ../../lk
SSCDIR = ../../ssc

WEXLIB = $(WEXDIR)/wexuxwx3.a
LKLIB = $(LKDIR)/lkuxwx3.a
SSCLIB = $(SSCDIR)/build_linux/ssc.so

CC = gcc
CXX = g++
CFLAGS = -g -DLK_USE_WXWIDGETS -I. -I$(SRCDIR) -I$(WEXDIR)/include -I$(LKDIR) -I$(SSCDIR) `wx-config-3 --cflags`
CXXFLAGS = $(CFLAGS)
LDFLAGS = `wx-config-3 --libs` `wx-config-3 --libs aui` `wx-config-3 --libs stc` `wx-config-3 --libs propgrid` `wx-config-3 --libs richtext` -lm $(LKLIB) $(WEXLIB) -lstdc++ -lcurl

OBJECTS = ide.o \
	lossdiag.o \
	defmgr.o \
	urdb.o \
	macro.o \
	s3clipper.o \
	s3engine.o \
	s3objects.o \
	s3tool.o \
	s3view.o \
	stochastic.o \
	urdb.o \
	solarprospector.o \
	windtoolkit.o \
	registration.o \
	gridsupport.o \
	macro.o \
	p50p90.o \
	reports.o \
	script.o \
	graph.o \
	excelexch.o \
	simulation.o \
	library.o \
	results.o \
	ipagelist.o \
	casewin.o \
	invoke.o \
	case.o \
	main.o \
	equations.o \
	inputpage.o \
	uiobjects.o \
	adjfac.o \
	widgets.o \
	variables.o \
	project.o \
	object.o \
	simplecurl.o \
	variablegrid.o \
	parametric.o \
	welcome.o \
	ptlayoutctrl.o \
	troughloop.o \
	shadingfactors.o \
	materials.o

TARGET = SAM


$(TARGET): $(OBJECTS) $(WEXLIB) $(LKLIB) $(SSCLIB)
	$(CXX) -g -o $@ $^ $(LDFLAGS)
	mkdir -p ../deploy/linux_64
	cp SAM ../deploy/linux_64
	
DEPENDS = $(OBJECTS:.o=.d)

-include $(DEPENDS)

%.d: %.cpp
	$(CXX) -MM $(CFLAGS) $^ > $*.d
	@cp -f $*.d $*.d.tmp
	@sed -e 's/.*://' -e 's/\\$$//' < $*.d.tmp | fmt -1 | \
	  sed -e 's/^ *//' -e 's/$$/:/' >> $*.d
	@rm -f $*.d.tmp

clean:
	rm -rf $(OBJECTS) $(TARGET) $(TARGET).app
